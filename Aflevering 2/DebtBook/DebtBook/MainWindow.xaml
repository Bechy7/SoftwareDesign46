<Window x:Class="DebtBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DebtBook"
        mc:Ignorable="d"
        Title="Debtbook" Height="350" Width="525">
    <DockPanel>
        <DataGrid Name="Debitors" AutoGenerateColumns="False" Width="519">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="First Name" Binding="{Binding Firstname}" />
                    <DataGridTextColumn Header="Surname" Binding="{Binding Surname}" />
                <DataGridTextColumn Header="Total Debt" Binding="{Binding Debt}" />
                    <DataGridTextColumn Header="Occupation" Binding="{Binding Occupation}" />
            </DataGrid.Columns>
                <DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Details}" Margin="10" />
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>
            </DataGrid>
    </DockPanel>
</Window>
